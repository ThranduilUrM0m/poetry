{
    "hosting": {
        "public": "client/public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/api/**",
                "destination": "https://poetry-g71n.onrender.com/api/**"
            },
            {
                "source": "**",
                "function": "nextjsFunc"
            }
        ]
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs20"
    }
}
